#Libraries
import uuid
import requests
from flask import Flask, request, jsonify

app = Flask(__name__)

context_store = {}

@app.route('/chat', methods = ['POST'])
def chat():

    data = request.json
    url = data.get('url')
    question = data.get('question')
    session_id = data.get('session_id')

    if not question:
        return jsonify({'error': 'Please provide a question'}), 400
    
